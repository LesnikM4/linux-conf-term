#!/usr/bin/env bash

[[ -e /mnt/vmlinuz ]] && \
echo "Start backup linux on /mnt/ in /mnt/backup/backup_linux_$(date +"%Y.%m.%d").tar.gz" && \
cd /mnt && \
tar -v --exclude=tmp --exclude=home/lm/.cache --exclude=swapfile --exclude=backup -czpf \
/mnt/backup/backup_linux_$date_format.tar.gz ./ && \
echo -e "\033[32;1mEnd successfully\033[0m" || echo -e "\033[31;1mFail\033[0m

